<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/calculateFragment">

    <fragment
        android:id="@+id/calculateFragment"
        android:name="com.example.m5.ui.fragments.CalculateFragment"
        android:label="fragment_calculate"
        tools:layout="@layout/fragment_calculate" >
        <action
            android:id="@+id/action_calculateFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
        <action
            android:id="@+id/action_calculateFragment_to_history"
            app:destination="@id/history" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.m5.ui.fragments.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" >
    <argument
        android:name="result"
        app:argType="com.example.m5.data.network.model.LoveModel"
        app:nullable="true"
        android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/history"
        android:name="com.example.m5.ui.fragments.History"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" >
        <action
            android:id="@+id/action_history_to_calculateFragment"
            app:destination="@id/calculateFragment" />
    </fragment>
    <fragment android:id="@+id/placeholder" />
</navigation>